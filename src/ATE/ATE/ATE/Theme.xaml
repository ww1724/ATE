<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <SolidColorBrush x:Key="AppBgColor" Color="#3B4864"/>

    <SolidColorBrush x:Key="MenuHoverBg" Color="#262F43"/>
    
    <SolidColorBrush x:Key="ContentBg" Color="#FFF"/>

    <SolidColorBrush x:Key="ContentBg2" Color="#FAFBFC"/>

    <SolidColorBrush x:Key="TextColor" Color="#000"/>

    <SolidColorBrush x:Key="InactiveTextColor" Color="#BEC2C7"/>

    <SolidColorBrush x:Key="ActiveTextColor" Color="#fff"/>
    <SolidColorBrush x:Key="ActiveTextColor2" Color="#efefef"/>
    <SolidColorBrush x:Key="ActiveTextColor3" Color="#eee"/>

    <SolidColorBrush x:Key="InverseTextColor" Color="#D8DAE1"/>

    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource DefaultTextColor}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontFamily" Value="{StaticResource LxwkFontFamily}" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

</ResourceDictionary>